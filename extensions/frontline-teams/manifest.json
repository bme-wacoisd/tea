{
  "manifest_version": 3,
  "name": "Frontline TEAMS Roster Sync",
  "version": "1.3.4",
  "description": "Extract student rosters from Frontline TEAMS and compare with Google Classroom",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://waco.teams.hosting/*",
    "https://*.teams.hosting/*",
    "https://classroom.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://waco.teams.hosting/*",
        "https://*.teams.hosting/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
